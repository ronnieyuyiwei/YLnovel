extends includes/layout

block append pagescript
    script.
        var h = document.body.clientHeight;
        $(function(){
            $(".login-container").css("height",h);
        })
    script(src="/javascripts/register.js")
block content
    .login-container
        .login-head
            a(href="/mypage")
                img(src="/images/icons/back.png")
            label 忘记密码
        .login-input
            input.id(type="text",placeholder="手机号")
            input.password(type="password",placeholder="密码")
        .login-btn 立即登录
        .login-regist
            a(href="/register") 立即注册

